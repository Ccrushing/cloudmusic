/* components/musiclist/musiclist.wxss */
/* 歌曲容器 */
.musiclist-container {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;
}

/* 左侧歌曲编号 */
.musiclist-index {
  color: #888;
  font-size:34rpx;
  width: 80rpx;
}

/* 右侧歌曲信息 */
.musiclist-info {
  flex-grow: 1;
  width: 0;
}
  /* 歌名，不换行 */
.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
  }
  /* 歌手 */
  .musiclist-singer {
    font: size 24rpx;
    color: #888;
  }

  /* 高亮样式 */
  .playing view,.playing text {
    color: #d43c33;
  }
