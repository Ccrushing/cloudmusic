.container {
  display: flex;
  align-items: center;
}

.control {
  flex: 1;
  position: relative;
}

.movable-area {
  width: 100%;
  height: 34rpx;
  position: absolute;
  bottom: -14rpx;
  left: 0;
}

.movable-view {
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border-radius: 50%;
}

.time {
  width: 64rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 499;
  line-height: 30rpx;
}
