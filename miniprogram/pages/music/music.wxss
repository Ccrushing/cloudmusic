page{
  background-color: #f8f8f8;
}
.nav{
  width: 100%;
  position: fixed;
  z-index: 9999;
  top: 0;
  background: -webkit-linear-gradient(to bottom,#d9a7c7 0%, #fffdcd 100%);
  background: linear-gradient(to bottom,#d9a7c7 0%, #fffdcd 100%);
}
.search-input {
  width: 60%;
  height: 32px;
  border-radius: 20rpx;
  background-color: #fff;
  color: #484749;
  position: absolute;
  bottom: 6px;
  left: 30rpx;
  text-align: center;
  opacity: 0.7;
}
.nav-title {
  position: absolute;
  font-size: 36rpx;
  bottom: 6px;
  left: 300rpx;
  text-align: center;
}

.swiper {
  height: 340rpx;
}
.img {
  margin-left: 50rpx;
  width: 85%;
  height: 85%;
  border-radius: 15rpx;
}
.title {
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.playlist-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 10rpx;
}